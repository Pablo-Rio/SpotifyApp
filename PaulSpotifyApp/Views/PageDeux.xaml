<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaulSpotifyApp.Views.PageDeux">
    <ContentPage.Content>
           <FlexLayout JustifyContent="Center"
                       Direction="Column">
            <Image x:Name="ImageDeLArtiste"
                   Margin="0, 50, 0, 0"/>
            
            <Label Text="Page 2" x:Name="NomArtiste"
                   TextColor="Black"
                   FontSize="45"
                   HorizontalTextAlignment="Center"/>
            <Label x:Name="NombreFollowers"
                   TextColor="Black"
                   FontSize="25"
                   HorizontalTextAlignment="Center"/>
            <Label x:Name="GenresMusicaux"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>
            <Label x:Name="Popularite"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>