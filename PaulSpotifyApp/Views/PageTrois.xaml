<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaulSpotifyApp.Views.PageTrois">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="ImageDeLAlbum"
                   Margin="0, 50, 0, 0" />

            <Label Text="Page 2" x:Name="NomAlbum"
                   TextColor="Black"
                   FontSize="45"
                   HorizontalTextAlignment="Center" />
            <Label x:Name="Artiste"
                   TextColor="Black"
                   FontSize="25"
                   HorizontalTextAlignment="Center" />
            <Label x:Name="DateDeSortie"
                   TextColor="Black"
                   HorizontalTextAlignment="Center" />
            <ListView x:Name="ListeDesTitres" SeparatorColor="Black" Margin="20">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding}" TextColor="Black" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>