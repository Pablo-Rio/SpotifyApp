<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaulSpotifyApp.Views.PageQuatre">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="NomTitre"
                   TextColor="Black"
                   FontSize="45"
                   HorizontalTextAlignment="Center" />
            <Label x:Name="NomArtiste"
                     TextColor="Black"
                     FontSize="25"
                     HorizontalTextAlignment="Center" />
            <Label x:Name="NomAlbum"
                        TextColor="Black"
                        HorizontalTextAlignment="Center" />
            <Image x:Name="ImageDeLAlbum"
                   Margin="0, 50, 0, 0" />
            <Label x:Name="NumeroDeLaPiste"
                   TextColor="Black"
                   HorizontalTextAlignment="Center" />
            <Label x:Name="Duree"
                   TextColor="Black"
                   HorizontalTextAlignment="Center" />
            <Label x:Name="DureeTotale"
                   TextColor="Black"
                   HorizontalTextAlignment="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>